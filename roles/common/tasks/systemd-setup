- name: copying {{ component }} serive file
  copy:
    src: "{{component}}.service.j2"
    dest: "/etc/systemd/system/{{ component }}.service" 
  template: yes   


- name: RELOAD SYSTEMD DAEMON of {{component}}
  systemd:
    daemon_reexec: yes    

- name: RESTART {{component}} SERVICE
  systemd:
    name: "{{ component }}"
    state: restarted 